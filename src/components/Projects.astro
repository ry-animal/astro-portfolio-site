---
import { portfolioConfig } from '../portfolio.config';
---
{portfolioConfig.map((project) => {
	return (
		<a href={project.links}>
			<div class="md:w-96 md:h-72 bg-slate-600 p-4 rounded-xl shadow-xl transition transform duration-300 hover:translate-y-1">
				<img src={project.image} alt={project.name} class="md:w-96 md:h-48 rounded-lg shadow-md"/>
                <div class="p-3">
                    <p>{project.name}</p>
                    <p class="text-sm">{project.description}</p>
                </div>
			</div>
		</a>
	)
})}